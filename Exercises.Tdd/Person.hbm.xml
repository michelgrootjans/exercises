                   assembly="Exercises.Tdd"
                   namespace="Exercises.Tdd"
                   default-lazy="false"
                   default-access="field">

  <class name="Person" table="People">
    <id column="Id" type="Guid">
      <generator class="guid" />
    </id>

    <property name="name" />

  </class>

</hibernate-mapping>